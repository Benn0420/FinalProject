<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_custom_iss_picture"
    android:backgroundTintMode="add"
    android:backgroundTint="#33FFFFFF"
    tools:context=".IssFragment">

    <TextView
        android:id="@+id/issText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:text="Track the ISS"
        android:fontFamily="@font/orbitronio"
        android:textColor="#FFFFFF"
        android:background="#33FFFFFF"
        android:textSize="40dp"/>

    <ImageView
        android:id="@+id/issMap"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/issText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/trackissButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/issMap"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Track"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>