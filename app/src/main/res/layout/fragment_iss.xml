<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment layout for the tracking of the International Space Station -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_custom_iss_picture"
    android:backgroundTintMode="add"
    android:backgroundTint="#33FFFFFF"
    tools:context=".IssFragment">
    <!-- textview for the fragment title -->
    <TextView
        android:id="@+id/issText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/IFtitle"
        android:textSize="40sp"
        android:fontFamily="@font/orbitronio"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Google Map -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/issMap"
        android:contentDescription="@string/IFgoogle"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/issText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        map:cameraZoom="10"
        map:mapType="normal"
        map:liteMode="false"
        map:uiCompass="true"
        map:uiRotateGestures="true"
        map:uiScrollGestures="true"
        map:uiTiltGestures="false"
        map:uiZoomControls="true"
        map:uiZoomGestures="true"
        map:zOrderOnTop="false" />
    <!-- button to track the I.S.S. -->
    <Button
        android:id="@+id/trackissButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/IFtrack"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/issMap"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- textview for the iss location -->
    <TextView
        android:id="@+id/ISSlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#33000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trackissButton"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- textview for the iss latitude -->
    <TextView
        android:id="@+id/ISSlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="10dp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#33000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ISSlocation"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- textview for the iss longitude -->
    <TextView
        android:id="@+id/ISSlong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="10dp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#33000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ISSlat"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- textview for the iss altitude -->
    <TextView
        android:id="@+id/ISSaltitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="10dp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#33000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ISSlong"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- textview for the iss velocity -->
    <TextView
        android:id="@+id/ISSvelocity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="10dp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#33000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ISSaltitude"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- textview for the iss visibility -->
    <TextView
        android:id="@+id/ISSvisibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="10dp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#33000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ISSvelocity"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- progress bar for tracking update -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/trackissButton"
        app:layout_constraintTop_toBottomOf="@id/issMap"/>

</androidx.constraintlayout.widget.ConstraintLayout>