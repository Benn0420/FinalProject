<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_custom_rocket_bkgrnd_blk"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/iotdDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iotdPhoto"
        android:layout_marginTop="110dp"
        android:layout_marginHorizontal="10dp"
        android:text="Image of 99 99 9999"
        android:fontFamily="@font/orbitronio"
        android:textColor="#FFFFFF"
        android:background="#33FFFFFF"
        android:textSize="30dp"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/iotdPhoto"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="@id/iotdDate"
        app:layout_constraintTop_toBottomOf="@id/iotdDate"
        app:layout_constraintEnd_toEndOf="@id/iotdDate"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_custom_rocket"/>
    <TextView
        android:id="@+id/iotdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iotdPhoto"
        app:layout_constraintTop_toBottomOf="@id/iotdPhoto"
        app:layout_constraintEnd_toEndOf="@id/iotdPhoto"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:text="Title of the image of the day"
        android:textColor="#FFFFFF"
        android:background="#33FFFFFF"
        android:textSize="25dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/iotdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iotdPhoto"
        app:layout_constraintTop_toBottomOf="@id/iotdTitle"
        app:layout_constraintEnd_toEndOf="@id/iotdPhoto"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:text="Description of the image of the day"
        android:textColor="#FFFFFF"
        android:background="#33FFFFFF"
        android:textSize="15dp"
        android:gravity="center"/>



</androidx.constraintlayout.widget.ConstraintLayout>