<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment layout for the homescreen of the app -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_custom_rocket"
    tools:context=".HomeFragment">
    <!-- textview for the Apps title -->
    <TextView
        android:id="@+id/nasaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/HFnasa"
        android:textSize="75sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/orbitronio"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- textview for the Apps title -->
    <TextView
        android:id="@+id/iotdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/HFiotd"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/orbitronio"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/nasaText"
        app:layout_constraintTop_toBottomOf="@id/nasaText"
        app:layout_constraintEnd_toEndOf="@id/nasaText"/>
    <!-- todays space image nav button -->
    <Button
        android:id="@+id/today_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/HFtoday"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/nasaText"
        app:layout_constraintTop_toBottomOf="@id/iotdText"
        app:layout_constraintEnd_toEndOf="@id/nasaText"/>
    <!-- custom day space image nav button -->
    <Button
        android:id="@+id/pickaday_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/HFpick"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/nasaText"
        app:layout_constraintTop_toBottomOf="@id/today_button"
        app:layout_constraintEnd_toEndOf="@id/nasaText"/>
    <!-- collection of photos nav button -->
    <Button
        android:id="@+id/collections_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/HFsaved"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/nasaText"
        app:layout_constraintTop_toBottomOf="@id/pickaday_button"
        app:layout_constraintEnd_toEndOf="@id/nasaText"/>
    <!-- track the space station nav button -->
    <Button
        android:id="@+id/trackiss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/HFiss"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/nasaText"
        app:layout_constraintTop_toBottomOf="@id/collections_button"
        app:layout_constraintEnd_toEndOf="@id/nasaText"/>

</androidx.constraintlayout.widget.ConstraintLayout>
