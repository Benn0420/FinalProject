<?xml version="1.0" encoding="utf-8"?>
<!-- Using a LinearLayout to hold the HeaderLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="#DC1111"
    android:orientation="vertical">
        <!-- Setting Nasa Logo for header Icon -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_custom_nasa" />
        <!-- Headers title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/HLtitle"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <!-- Headers brief description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/HLbody"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#000000"/>

</LinearLayout>
